mad_unif.1 = {
	type = country_event
	placement = ROOT

	title = mad_unif.1.t
	desc = mad_unif.1.d
	flavor = mad_unif.1.f
	
	duration = 3
	
	option = {
		name = mad_unif.1.a
		add_modifier = {
			name = madagascar_united
			months = long_modifier_time
		}
		ig:ig_armed_forces = {
			add_modifier = {
				name = madagascar_military_unification
				months = normal_modifier_time
			}
		}
	}
}

